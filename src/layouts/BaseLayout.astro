---
import Nav from "@/components/ui/Nav.astro";
import Footer from "@/components/ui/Footer.astro";
import StarBackground from "@/components/three/StarBackground";
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  variant?: "space" | "paper";
}

const {
  title,
  description = "Seonglae Cho - Research & Engineering Portfolio",
  variant = "paper",
} = Astro.props;

const isSpace = variant === "space";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title} | Seongland</title>

    {/* Theme flash prevention */}
    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        const preferred = window.matchMedia("(prefers-color-scheme: dark)")
          .matches
          ? "dark"
          : "light";
        document.documentElement.setAttribute(
          "data-theme",
          stored || preferred
        );
      })();
    </script>
  </head>
  <body
    class:list={[
      "min-h-screen flex flex-col",
      isSpace
        ? "space-body text-space-fg"
        : "font-sans bg-paper text-ink",
    ]}
  >
    <StarBackground client:only="react" />
    <div id="content" class="relative z-10" style={isSpace ? 'filter:blur(6px);transition:filter 0.3s ease' : ''}>
      <Nav variant={variant} />
      <main class="flex-1">
        <slot />
      </main>
      <Footer variant={variant} />
    </div>

    <script is:inline>
      (function () {
        // Blur removal for main page
        var content = document.getElementById('content');
        if (content && content.style.filter) {
          setTimeout(function () { content.style.filter = ''; }, 100);
        }

        // Scroll-triggered reveal observer
        var observer = new IntersectionObserver(
          function (entries) {
            entries.forEach(function (entry) {
              if (entry.isIntersecting) entry.target.classList.add('visible');
            });
          },
          { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
        );
        document.querySelectorAll('.scroll-reveal').forEach(function (el) {
          observer.observe(el);
        });
      })();
    </script>
  </body>
</html>
