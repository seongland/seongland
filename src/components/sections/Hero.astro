---
import { profile } from "@/data/profile";
---

<section class="pt-16 pb-12 scroll-reveal">
  <div class="flex flex-col items-center gap-6 sm:flex-row sm:items-start">
    <div class="flex flex-col items-center text-center sm:items-start sm:text-left">
      <h1 class="space-heading text-3xl tracking-widest text-space-fg">
        {profile.name}
      </h1>
      <p class="space-heading mt-2 text-sm tracking-wider text-space-fg/60">
        {profile.title}
      </p>
      <p class="mt-4 max-w-md leading-relaxed text-space-fg/80">
        {profile.bio}
      </p>
      <div class="mt-6 flex gap-5">
        <a
          href={profile.links.scholar}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-space-fg/50 transition-colors hover:text-space-fg"
        >
          Scholar
        </a>
        <a
          href={profile.links.github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-space-fg/50 transition-colors hover:text-space-fg"
        >
          GitHub
        </a>
        <a
          href={profile.links.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-space-fg/50 transition-colors hover:text-space-fg"
        >
          LinkedIn
        </a>
        <a
          href={profile.links.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-space-fg/50 transition-colors hover:text-space-fg"
        >
          Twitter
        </a>
      </div>
    </div>
  </div>
</section>
