---
import { profile } from "@/data/profile";
---

<section class="py-12 animate-reveal d4">
  <h2 class="space-heading mb-6 text-lg tracking-widest text-white/90">
    Research Interests
  </h2>
  <div class="flex flex-wrap gap-3">
    {
      profile.interests.map((interest) => (
        <span class="rounded-full border border-white/10 px-4 py-1.5 text-sm text-white/60 transition-colors hover:border-white/30 hover:text-white/80">
          {interest}
        </span>
      ))
    }
  </div>
</section>
